@{
    // Sayfanın Layout'tan etkilenmemesi ve tam ekran olması için:
    Layout = null;
    ViewData["Title"] = "Oturum Aç";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <style>
        * {
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #1e1e2f, #2c2c44);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        .login-card {
            background: rgba(58, 58, 79, 0.95);
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.5);
            width: 380px;
            text-align: center;
            color: white;
            /* Giriş animasyonu */
            opacity: 0;
            animation: fadeInCard 0.8s ease-out forwards;
        }

            .login-card h2 {
                margin-bottom: 30px;
                font-weight: 600;
                color: #ffffff;
            }

        .input-group {
            margin-bottom: 20px;
            text-align: left;
        }

            .input-group label {
                display: block;
                margin-bottom: 8px;
                font-size: 14px;
                color: #b8b8d1;
            }

            .input-group input {
                width: 100%;
                padding: 12px 15px;
                border-radius: 10px;
                border: 2px solid #4a4a6a;
                background: #2c2c44;
                color: white;
                font-size: 16px;
                transition: all 0.3s ease;
            }

                .input-group input:focus {
                    outline: none;
                    border-color: #6c63ff;
                    box-shadow: 0 0 8px rgba(108, 99, 255, 0.4);
                }

        .btn-login {
            width: 100%;
            padding: 12px;
            background: #6c63ff;
            border: none;
            border-radius: 10px;
            color: white;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.2s, background 0.3s;
            margin-top: 10px;
        }

            .btn-login:hover {
                background: #574fd6;
                transform: translateY(-2px);
            }

        .login-footer {
            margin-top: 20px;
            font-size: 13px;
            color: #8a8aab;
        }

            .login-footer a {
                color: #6c63ff;
                text-decoration: none;
            }

        /* Razor hata vermemesi için @@ kullanımı */
        @@keyframes fadeInCard {
            from {
                opacity: 0;
                transform: translateY(40px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>

    <div class="login-card">
        <h2>Oturum Aç</h2>

        @* ASP.NET Form Yapısı *@
        <form action="/Account/Login" method="post">

            <div class="input-group">
                <label>Kullanıcı Adı</label>
                <input type="text" name="Username" placeholder="Kullanıcı adınızı girin" required />
            </div>

            <div class="input-group">
                <label>Şifre</label>
                <input type="password" name="Password" placeholder="••••••••" required />
            </div>

            <button type="submit" class="btn-login">Giriş Yap</button>

        </form>

        <div class="login-footer">
            Hesabınız yok mu? <a href="/Account/Register">Kayıt Ol</a>
        </div>
    </div>

</body>
</html>